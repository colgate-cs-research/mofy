!
version 12.4
!
hostname B
!
access-list 1 permit 1.0.0.0 0.0.255.255
access-list 1 deny any
!
access-list 2 deny 1.0.0.3 0.0.0.255
access-list 2 permit any
!
interface GigabitEthernet0/1
    description INFRA:C:Gi0/1
    ip address 1.0.1.1/16
    ip ospf cost 1
!
interface GigabitEthernet0/2
    description INFRA:D:Gi0/1
    ip address 3.0.1.2/16
    ip ospf cost 1
!
interface GigabitEthernet0/3
    ip address 11.0.1.3 255.0.0.0
!
router ospf 1
    redistribute connected
    network 3.0.0.0 0.0.255.255 area 0
    network 1.0.0.0 0.0.255.255 area 0
!
end
